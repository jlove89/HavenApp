{
  "editor.formatOnSave": true,
  "[python]": {
    "editor.defaultFormatter": "ms-python.python",
    "editor.formatOnSave": true
  },
  "[dart]": {
    "editor.defaultFormatter": "Dart-Code.dart-code",
    "editor.formatOnSave": true
  },
  "files.exclude": {
    "**/__pycache__": true,
    "**/*.pyc": true,
    "**/.*": true
  },
  "search.exclude": {
    "backend/venv": true,
    "backend/env": true,
    "mobile/.dart_tool": true,
    "mobile/build": true,
    "node_modules": true
  },
  // Disable Live Server to avoid interfering with Flask
  "liveServer.settings.donotShowInfoMsg": true,
  "liveServer.settings.port": 0
}
