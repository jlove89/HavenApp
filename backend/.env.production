# HavenApp Backend - Production Environment
# Replace with actual values before deployment

FLASK_ENV=production
FLASK_DEBUG=False

# Database - Use PostgreSQL in production
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://user:password@db-host:5432/havenapp

# Security Keys - Generate new secure keys for production
# Use `python -c "import secrets; print(secrets.token_urlsafe(32))"`
SECRET_KEY=your-secret-key-here-generate-new-one
JWT_SECRET_KEY=your-jwt-secret-key-here-generate-new-one

# Encryption - Must be 32 bytes
ENCRYPTION_KEY=generate-32-byte-key-with-secrets-token-urlsafe

# Logging
LOG_LEVEL=INFO

# CORS Configuration
CORS_ORIGINS=https://yourdomain.com,https://app.yourdomain.com

# Rate Limiting
REDIS_URL=redis://redis-host:6379/0

# Flask Security
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax
